{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "paths": {
            "@vote-seat-web-app/*": ["./src/*"]
        },
        "allowJs": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "coverage"]
}
